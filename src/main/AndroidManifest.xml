<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xiaochen.videoplayer"
    android:versionCode="53"
    android:versionName="3.1.2 Beta 9">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk 
        android:minSdkVersion="14" 
        android:targetSdkVersion="25" />
        
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <application
        android:name="com.xiaochen.videoplayer.utils.AppConfig"
        android:icon="@mipmap/ic_launcher"
        tools:replace="android:label"
        android:label="Amaze">

        <activity
            android:label="VideoPlayer"
            android:launchMode="singleInstance"
            android:name="com.xiaochen.videoplayer.activities.MainActivity"
            android:theme="@style/appCompatLight">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT" />
                <data android:mimeType="*/*" />
                <category android:name="android.intent.category.OPENABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.RINGTONE_PICKER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data android:mimeType="application/zip" />
                <data android:mimeType="application/rar" />
                <data android:mimeType="application/x-rar-compressed"/><!--<category android:name="android.intent.category.OPENABLE" />-->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES" />
            </intent-filter>
        </activity>
		<activity
			android:uiOptions="splitActionBarWhenNarrow"
            android:label="@string/setting"
            android:name="com.xiaochen.videoplayer.activities.Preferences"
			android:theme="@style/appCompatLight">
	    <intent-filter>
                <action android:name="android.intent.action.APPLICATION_PREFERENCES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <service
			android:name = "com.xiaochen.videoplayer.services.ExtractService"
			android:label = "Extracting"
			>	
		</service>
        <service
			android:name = "com.xiaochen.videoplayer.services.ZipTask"
			android:label = "Compressing"
            >
		</service>
			<service
			android:name = "com.xiaochen.videoplayer.services.CopyService"
			android:label = "Copying"
            >
		</service>

    </application>

</manifest>
